<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="view.Controller">

    <TextField fx:id="newUserNameTextField" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button fx:id="addNewUserButton" text="Добавить нового пользователя" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ListView fx:id="usersListView" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button fx:id="removeUserButton" text="Удалить выбранного пользователя" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="newOrderNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Button fx:id="addNewOrderButton" text="Добавить новый заказ" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <ListView fx:id="ordersListView" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button fx:id="removeOrderButton" text="Удалить выбранный заказ" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button fx:id="showFullInfoButton" text="Показать полную информацию" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    <TableView fx:id="fullInfoTableView" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
</GridPane>
